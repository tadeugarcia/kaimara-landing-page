RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f [OR]
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+?)/?$ $1.php [L]

# Definindo a home como o índice padrão do diretório
DirectoryIndex home/home.php

# Redirecionamento para a página "info"
RewriteRule ^carrinho/?$ info/info.php [L]

# Redirecionamento para a página "exemplo"
RewriteRule ^exemplo/?$ exemplo/exemplo.php [L]

# Redirecionamento para a página "entrega"
RewriteRule ^entrega/?$ entrega/entrega.php [L]

# Redirecionamento para a página "detalhes"
RewriteRule ^detalhes/([0-9]+)$ detalhes/$1 [QSA,L]

# Redirecionamento para a página "carrinho"
RewriteRule ^carrinho/?$ carrinho/carrinho.php [L]